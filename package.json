{
  "name": "moskool",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.10.1",
    "@material-ui/icons": "^4.9.1",
    "@sentry/browser": "^5.17.0",
    "firebase": "^7.15.0",
    "material-table": "^1.60.0",
    "react": "^16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.13.1",
    "react-dom-confetti": "^0.1.3",
    "react-hook-form": "^5.7.2",
    "react-live": "^2.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-typist": "^2.0.5",
    "recompose": "^0.30.0",
    "string-similarity": "^4.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "deploy": "npm run lintAndFix && react-scripts build && firebase deploy --only hosting:tool-builder",
    "check-updates": "ncu -u",
    "test": "react-scripts test",
    "ci-test": "cross-env CI=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js --max-warnings 5",
    "lintAndFix": "eslint './src/**/*.js' --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lintAndFix"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.0",
    "cross-env": "^7.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
