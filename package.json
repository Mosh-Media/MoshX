{
	"name": "moskool",
	"version": "1.0.0",
	"private": true,
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"@sentry/browser": "^5.19.2",
		"firebase": "^7.16.1",
		"material-table": "^1.65.0",
		"react": "^16.13.1",
		"react-beautiful-dnd": "^13.0.0",
		"react-dom": "^16.13.1",
		"react-hook-form": "^6.0.7",
		"react-live": "^2.2.2",
		"react-router-dom": "^5.2.0",
		"react-scripts": "3.4.1",
		"react-typist": "^2.0.5",
		"recompose": "^0.30.0",
		"string-similarity": "^4.0.1",
		"use-global-hook": "^0.1.12"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"deploy": "npm run lint && react-scripts build && firebase deploy --only hosting:tool-builder",
		"check-updates": "ncu -u",
		"test": "react-scripts test --bail --updateSnapshot",
		"test:watch": "react-scripts test --bail --updateSnapshot --watch",
		"ci-test": "cross-env CI=true react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"lint": "eslint './src/**/*.{js,jsx}' --fix",
		"prettier": "prettier --write 'src/**/*.{js,jsx,css,scss}'",
		"pre-push": "cross-env CI=true react-scripts test --env=jsdom"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged",
			"pre-push": "yarn pre-push"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@testing-library/react-hooks": "^3.3.0",
		"@types/jest": "^26.0.4",
		"cross-env": "^7.0.2",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.3",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier-eslint-cli": "^5.0.0",
		"react-test-renderer": "^16.13.1"
	},
	"lint-staged": {
		"src/**/*.{js,jsx}": [
			"eslint --fix",
			"prettier-eslint --write",
			"git add"
		]
	}
}